<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @post.name %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<p>
  <% Rails.cache.fetch('tags') do %>
  <b>Tags:</b>
  <%= join_tags(@post) %>
</p>
<% end %>

<% Rails.cache.fetch('comments', :expires_in => 10.seconds) {render @post.comments} %>
<h2>Comments</h2>
<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<br>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
